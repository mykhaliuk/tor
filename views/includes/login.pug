.card
  .card-content
    span.card-title.fa.fa-sign-in
        |   Login   
    br
    br
    br 
    br
    form(action='/login', method='post')
            .row
                .input-field.col.s12
                    input#input_login.validate(type='email', name='email')
                    label(for='input_login', data-error="It's not an e-mail address", data-success="") Email
            .row
                .input-field.col.s12
                    input#input_pass.validate(type='password', name='password')
                    label(for='input_pass'  , data-success="") Password
            .center: button.btn-flat(type='submit') Login
    .center: a.activator(href='#') Don't have an account yet?
  .card-reveal
    span.card-title
      | Signin
      i.fa.fa-times.right 
    
    form(action="/signup" method="post")
        .row
            .input-field.col.s12
                input#input_name.validate(type='text', name='name')
                label(for='input_name') Name
        .row
            .input-field.col.s12
                input#input_signup.validate(type="email" name="email")
                label(for="input_signup" data-error="Email address only is accepted", data-success="") Email
        .row
            .input-field.col.s12
                input#input_password.validate(type="password" name="password")
                label(for="input_password" data-success="") Password
        .brake
        .center: button.btn-flat(type='submit') Signup






